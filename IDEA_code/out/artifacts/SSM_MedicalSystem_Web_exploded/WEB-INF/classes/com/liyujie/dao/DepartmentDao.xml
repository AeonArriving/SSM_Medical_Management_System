<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyujie.dao.DepartmentDao">
    <select id="selectAllDepartments" resultType="Department">
        select * from department
    </select>

    <select id="selectDepartmentNameById" resultType="String">
        select namedepartment from department where iddepartment=#{id}
    </select>

</mapper>